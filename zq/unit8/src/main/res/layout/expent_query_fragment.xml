<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ExpentQueryFragment">

    <ListView
        android:id="@+id/exlv_query_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/exllbtns_below"></ListView>

    <LinearLayout
        android:id="@+id/exllbtns_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/exdelete_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除选中items"/>
        <Button
            android:id="@+id/exupdate_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新选中item"/>
        <Button
            android:id="@+id/exdeletall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除所有ITEM"/>
    </LinearLayout>

</RelativeLayout>